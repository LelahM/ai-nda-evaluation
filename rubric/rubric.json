{
  "rubric": {
    "name": "NDA Evaluation Rubric",
    "version": "1.0",
    "scoring_scale": {
      "0": "Missing",
      "1": "Present but weak, vague, or creates legal risk",
      "2": "Clear and acceptable for attorney review"
    },
    "high_risk_categories": [
      "exclusions",
      "term_survival",
      "return_destruction",
      "governing_law_venue"
    ],
    "criteria": {
      "parties_purpose": {
        "name": "Parties and Purpose",
        "components": [
          "Identifies both parties with legal form",
          "States business purpose for information exchange",
          "Includes effective date or placeholder"
        ],
        "notes_field": "Record observations with direct quotes"
      },
      "confidential_info_definition": {
        "name": "Confidential Information Definition",
        "components": [
          "Defines what information is protected",
          "Scope is specific enough to be enforceable",
          "Avoids overly broad or circular definitions"
        ],
        "notes_field": "Quote definition, note vagueness or overreach"
      },
      "exclusions": {
        "name": "Exclusions",
        "high_risk": true,
        "components": [
          "Public information",
          "Prior knowledge",
          "Independent development",
          "Lawful third-party disclosure",
          "Required legal disclosure"
        ],
        "notes_field": "List which exceptions are present or missing"
      },
      "obligations_use_care": {
        "name": "Obligations (Use and Care)",
        "components": [
          "Limits use to stated purpose",
          "Specifies care standard",
          "Addresses who may access information"
        ],
        "notes_field": "Quote key obligation language"
      },
      "permitted_disclosures": {
        "name": "Permitted Disclosures",
        "components": [
          "Addresses disclosure to employees/agents/advisors",
          "Specifies conditions for disclosure",
          "Addresses notice for compelled disclosure"
        ],
        "notes_field": "Note gaps in disclosure controls"
      },
      "term_survival": {
        "name": "Term and Survival",
        "high_risk": true,
        "components": [
          "Specifies agreement duration",
          "Addresses survival after termination",
          "Creates obligation certainty"
        ],
        "notes_field": "Quote term language, note if survival missing"
      },
      "return_destruction": {
        "name": "Return or Destruction of Materials",
        "high_risk": true,
        "components": [
          "Requires return or destruction",
          "Specifies trigger event",
          "Provides information control mechanism"
        ],
        "notes_field": "Quote provision or note absence"
      },
      "remedies": {
        "name": "Remedies",
        "components": [
          "Addresses available remedies",
          "Includes injunctive relief",
          "Goes beyond vague 'legal action' language"
        ],
        "notes_field": "Quote remedy language, note if injunctive relief missing"
      },
      "governing_law_venue": {
        "name": "Governing Law and Venue",
        "high_risk": true,
        "components": [
          "Specifies applicable law",
          "Addresses jurisdiction or dispute resolution",
          "Creates enforceability certainty"
        ],
        "notes_field": "Quote clause or note absence"
      },
      "no_license_partnership": {
        "name": "No License / No Partnership / Assignment",
        "components": [
          "Clarifies no IP license granted",
          "Addresses entire agreement, amendments, severability",
          "Addresses assignment if relevant"
        ],
        "notes_field": "Note which provisions present"
      },
      "clarity_consistency": {
        "name": "Clarity and Consistency",
        "components": [
          "Uses defined terms consistently",
          "Avoids ambiguous pronouns or references",
          "Structure supports understanding"
        ],
        "notes_field": "Identify unclear or inconsistent language"
      }
    }
  }
}